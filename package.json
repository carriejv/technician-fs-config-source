{
	"name": "@technician/fs-config-source",
	"version": "1.0.2",
	"description": "Access config on your local filesystem with Technician.",
	"keywords": [
		"config",
		"configuration",
		"config file",
		"json",
		"secret",
		"secrets",
		"parser",
		"reader",
		"typescript",
		"types",
		"technician"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"start": "node index.js",
		"test": "npm run lint && npm run testOnly",
		"testOnly": "nyc --reporter=html --reporter=text mocha -r ts-node/register ./test/**/*.spec.ts",
		"lint": "eslint . --ext .ts",
		"build": "tsc --project ./tsconfig.json",
		"docs": "typedoc --out docs --theme ./node_modules/typedoc-dark-theme/bin/default/ src && echo \"Docs generated at ./docs/index.html\"",
		"prepublishOnly": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/carriejv/technician-fs-config-source.git"
	},
	"bugs": {
		"url": "https://github.com/carriejv/technician-fs-config-source/issues"
	},
	"homepage": "https://github.com/carriejv/technician-fs-config-source",
	"author": "Carrie Vrtis <carrie@carriejv.com> (https://www.carriejv.com)",
	"contributors": [
		"Carrie Vrtis <carrie@carriejv.com> (https://www.carriejv.com)"
	],
	"license": "Apache-2.0",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.16",
		"@types/sinon": "^9.0.10",
		"@typescript-eslint/eslint-plugin": "^4.11.1",
		"@typescript-eslint/parser": "^4.11.1",
		"chai": "^4.2.0",
		"eslint": "^7.16.0",
		"mocha": "^8.2.1",
		"nyc": "^15.1.0",
		"technician": "^1.0.1",
		"ts-node": "^9.1.1",
		"typedoc": "^0.20.4",
		"typedoc-dark-theme": "0.0.11",
		"typescript": "^4.1.3"
	}
}
